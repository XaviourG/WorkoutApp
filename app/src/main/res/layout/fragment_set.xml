<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etLoad"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:ems="6"
        android:hint="Load"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etReps"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="6"
        android:hint="Reps"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/tvTimes"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDeleteSet"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:text="x"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/btnType"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(kg/lbs) x"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/etLoad"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnType"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:text="â‹®"
        app:layout_constraintStart_toEndOf="@+id/etReps"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnReg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="6dp"
        android:layout_marginStart="50dp"
        android:text="Reg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="1dp" />
    <Button
        android:id="@+id/btnSS"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="6dp"
        android:layout_marginStart="20dp"
        android:text="SS"
        app:layout_constraintStart_toEndOf="@id/btnReg"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btnDS"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="6dp"
        android:layout_marginStart="20dp"
        android:text="DS"
        app:layout_constraintStart_toEndOf="@id/btnSS"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btnMyo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="6dp"
        android:layout_marginStart="20dp"
        android:text="Myo"
        app:layout_constraintStart_toEndOf="@id/btnDS"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/etDropLoad"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="6"
        android:fontFamily="@font/kanit_font"
        android:textColor="@color/dark"
        android:textSize="16dp"
        android:textColorHint="@color/light_gold"
        android:textAlignment="center"
        android:hint="Load (KG)"
        android:layout_marginStart="40dp"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/etLoad"
        app:layout_constraintTop_toBottomOf="@id/etLoad" />

    <EditText
        android:id="@+id/etDropReps"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="6"
        android:fontFamily="@font/kanit_font"
        android:hint="Reps"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/dark"
        android:textColorHighlight="@color/gold"
        android:textColorHint="@color/light_gold"
        android:textColorLink="@color/gold"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/tvDropMid"
        app:layout_constraintTop_toBottomOf="@id/etReps" />

    <TextView
        android:id="@+id/tvDropMid"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/kanit_font"
        android:text="(kg/lbs) x"
        android:textAlignment="center"
        android:textColor="@color/dark"
        android:textColorHint="@color/gold"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/etDropLoad"
        app:layout_constraintTop_toBottomOf="@id/etReps" />

    <TextView
        android:id="@+id/tvDS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DS:"
        android:textColor="@color/dark"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/kanit_font"
        app:layout_constraintEnd_toStartOf="@+id/etDropLoad"
        app:layout_constraintTop_toBottomOf="@+id/etLoad" />

    <TextView
        android:id="@+id/tvMyo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_font"
        android:text="Myo:"
        android:textColor="@color/dark"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toStartOf="@+id/etLoad"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
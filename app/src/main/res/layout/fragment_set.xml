<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etLoad"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/light_grey"
        android:textColor="@color/off_white"
        android:textColorHint="@color/light_grey"
        android:fontFamily="@font/kanit_font"
        android:textSize="18dp"
        android:ems="6"
        android:hint="Load"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etReps"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="6"
        android:hint="Reps"
        android:backgroundTint="@color/light_grey"
        android:textColor="@color/off_white"
        android:textColorHint="@color/light_grey"
        android:fontFamily="@font/kanit_font"
        android:textSize="18dp"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/tvTimes"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/btnDeleteSet"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/purple"
        android:fontFamily="@font/kanit_bold"
        android:textSize="22dp"
        android:text="x"
        android:background="@drawable/nothing"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/btnType"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(kg/lbs) x"
        android:textSize="14dp"
        android:textColor="@color/off_white"
        android:fontFamily="@font/kanit_font"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/etLoad"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/btnType"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/kanit_bold"
        android:text="â‹®"
        android:textSize="22dp"
        android:textColor="@color/purple"
        android:background="@drawable/nothing"
        app:layout_constraintStart_toEndOf="@+id/etReps"
        app:layout_constraintTop_toTopOf="parent" />




    <EditText
        android:id="@+id/etDropLoad"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="6"
        android:textAlignment="center"
        android:hint="Load"
        android:backgroundTint="@color/light_grey"
        android:textColor="@color/off_white"
        android:textColorHint="@color/light_grey"
        android:fontFamily="@font/kanit_font"
        android:textSize="18dp"
        android:layout_marginStart="40dp"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/etLoad"
        app:layout_constraintTop_toBottomOf="@id/etLoad" />

    <EditText
        android:id="@+id/etDropReps"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="6"
        android:hint="Reps"
        android:inputType="text"
        android:textAlignment="center"
        android:backgroundTint="@color/light_grey"
        android:textColor="@color/off_white"
        android:textColorHint="@color/light_grey"
        android:fontFamily="@font/kanit_font"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/tvDropMid"
        app:layout_constraintTop_toBottomOf="@id/etReps" />

    <TextView
        android:id="@+id/tvDropMid"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/kanit_font"
        android:text="(kg/lbs) x"
        android:textAlignment="center"
        android:textColor="@color/off_white"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/etDropLoad"
        app:layout_constraintTop_toBottomOf="@id/etReps" />

    <TextView
        android:id="@+id/tvDS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DS:"
        android:textColor="@color/off_white"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/kanit_bold"
        app:layout_constraintEnd_toStartOf="@+id/etDropLoad"
        app:layout_constraintTop_toBottomOf="@+id/etLoad" />

    <android.widget.Button
        android:id="@+id/btnReg"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:text="Reg Set"
        android:textSize="16dp"
        android:fontFamily="@font/kanit_font"
        android:textColor="@color/white"
        android:background="@drawable/loud_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/btnDS"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:text="Drop Set"
        android:textSize="16dp"
        android:fontFamily="@font/kanit_font"
        android:textColor="@color/white"
        android:background="@drawable/loud_button"
        app:layout_constraintStart_toEndOf="@+id/btnReg"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
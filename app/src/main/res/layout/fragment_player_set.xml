<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etLoad"

        android:backgroundTint="@color/grey"
        android:textColor="@color/white"
        android:textColorHint="@color/light_grey"

        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="6"
        android:fontFamily="@font/kanit_font"
        android:textSize="16dp"
        android:textAlignment="center"
        android:hint="Load"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/tvPrevEx"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etReps"
        android:backgroundTint="@color/grey"
        android:textColor="@color/white"
        android:textColorHint="@color/light_grey"
        android:layout_width="60dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="6"
        android:fontFamily="@font/kanit_font"
        android:textSize="16dp"
        android:hint="Reps"
        android:textColorHighlight="@color/off_white"
        android:textColorLink="@color/off_white"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/tvMid"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/btnTick"
        android:backgroundTint="@color/grey"
        android:textColor="@color/light_grey"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:text="âœ“"
        android:textSize="20dp"
        android:fontFamily="@font/kanit_font"
        android:shadowRadius="15"
        app:layout_constraintStart_toEndOf="@+id/etReps"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/tvPrevEx"
        android:backgroundTint="@color/grey"
        android:textColor="@color/purple"
        android:textColorHint="@color/light_grey"

        android:layout_width="60dp"
        android:layout_marginStart="50dp"
        android:layout_height="wrap_content"
        android:text="--"
        android:fontFamily="@font/kanit_font"
        android:shadowColor="@color/black"
        android:shadowRadius="5"
        android:textSize="13dp"
        android:textStyle="italic"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMid"
        android:backgroundTint="@color/grey"
        android:textColor="@color/light_grey"
        android:textColorHint="@color/light_grey"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:text="(kg/lbs) x"
        android:textAlignment="center"
        android:fontFamily="@font/kanit_font"
        android:textSize="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/etLoad"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/etDropLoad"
        android:backgroundTint="@color/grey"
        android:textColor="@color/white"
        android:textColorHint="@color/light_grey"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="6"
        android:fontFamily="@font/kanit_font"
        android:textSize="16dp"
        android:textAlignment="center"
        android:hint="Load"
        android:layout_marginStart="20dp"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/tvPrevEx"
        app:layout_constraintTop_toBottomOf="@id/etLoad" />

    <EditText
        android:id="@+id/etDropReps"
        android:backgroundTint="@color/grey"
        android:textColor="@color/white"
        android:textColorHint="@color/light_grey"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="6"
        android:fontFamily="@font/kanit_font"
        android:hint="Reps"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHighlight="@color/off_white"
        android:textColorLink="@color/off_white"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/tvDropMid"
        app:layout_constraintTop_toBottomOf="@id/etReps" />

    <TextView
        android:backgroundTint="@color/grey"
        android:textColor="@color/light_grey"
        android:textColorHint="@color/light_grey"
        android:id="@+id/tvDropMid"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/kanit_font"
        android:text="(kg/lbs) x"
        android:textAlignment="center"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/etDropLoad"
        app:layout_constraintTop_toBottomOf="@id/tvMid" />

    <TextView
        android:id="@+id/tvDS"
        android:backgroundTint="@color/grey"
        android:textColor="@color/light_grey"
        android:textColorHint="@color/light_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DS:"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/kanit_font"
        app:layout_constraintEnd_toStartOf="@+id/etDropLoad"
        app:layout_constraintTop_toBottomOf="@+id/etLoad" />
</androidx.constraintlayout.widget.ConstraintLayout>